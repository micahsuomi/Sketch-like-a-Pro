<%- include("../partials/header") %>


<div style="padding: 20rem 30rem">
    <h4>Add A New Comment to <%= gallery.name %></h4>
<form class="ui form" method="POST" action="/galleries/<%= gallery._id %>/comments">
    <div class="field">
      <label>Comment</label>
      <input type="text" name="comment[text]" placeholder="write a comment here">
    </div>
    <div class="field">
      <label>Author</label>
      <input type="text" name="comment[author]" placeholder="author">
    </div>
  
    <button class="ui primary button" type="submit">Submit</button>
  </form>

</div>

  <%- include("../partials/footer") %>
