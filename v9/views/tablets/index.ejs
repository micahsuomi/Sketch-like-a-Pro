<%- include("../partials/header") %>

<div class="tablets-review__container" style="padding: 5rem 10rem;">
<h1>Tablet Reviews</h1>


<% if(currentUser) { %>
    <a class="ui purple button" style="border-radius: 0;" href="/tablets/new"><i class="plus icon"></i>Add New</a>

<% } %>
<hr>

<div class="tablets-container">
    <div class="tablets-wrapper">
    <% if(tablets.length < 1) { %>
      <p>No tablet reviews yet</p>
    <% } else { %>

       
        <div class="ui divided items" style="padding: 5rem 10rem;">
            <% tablets.forEach(function(tablet) { %>

            <div class="item">
              <div class="image">
                <img src="<%= tablet.image %>" alt="<%= tablet.image %>">
            </div>
              <div class="content">
                <a class="header"><a href="/tablets/<%= tablet._id %>"><%= tablet.name %></a>
                <div class="meta">
                  <span class="cinema">Author: <a href="/users/<%= tablet.author.id %>"><%= tablet.author.username %></a></span>
                  <a class="avatar">
                    <% if(tablet.author.avatar.length < 1) { %>
                        <img src ="https://www.pngitem.com/pimgs/m/78-786501_black-avatar-png-user-icon-png-transparent-png.png" style="width: 5%">
                    <% } else { %>
                        <img src="<%= tablet.author.avatar %>" style="width: 2%;"> 
                    <% } %>
                  </a>
                </div>
                <div class="description">
                    <p><%= tablet.description.substring(0, 300) %>...</p>
                </div>
                <div class="extra">
                  <div class="ui label"><i class="thumbs up icon"></i>Likes</div>
                  <div class="ui label"><i class="comment icon"></i>Comments</div>
                  <a class="ui right floated primary button" href="/tablets/<%= tablet._id %>">
                    Read More
                    <i class="right chevron icon"></i>
                  </a>
                </div>
              </div>
            </div>

            <div class="item">
              <div class="image">
                <img src="<%= tablet.image %>" alt="<%= tablet.image %>">
            </div>
              <div class="content">
                <a class="header"><a href="/tablets/<%= tablet._id %>"><%= tablet.name %></a>
                <div class="meta">
                  <span class="cinema">Author: <a href="/users/<%= tablet.author.id %>"><%= tablet.author.username %></a></span>
                  <a class="avatar">
                    <% if(tablet.author.avatar.length < 1) { %>
                        <img src ="https://www.pngitem.com/pimgs/m/78-786501_black-avatar-png-user-icon-png-transparent-png.png" style="width: 5%">
                    <% } else { %>
                        <img src="<%= tablet.author.avatar %>" style="width: 2%;"> 
                    <% } %>
                  </a>
                </div>
                <div class="description">
                    <p><%= tablet.description.substring(0, 300) %>...</p>
                </div>
                <div class="extra">
                  <a class="ui right floated primary button" href="/tablets/<%= tablet._id %>">
                    Read More
                    <i class="right chevron icon"></i>
                  </a>
                  <div class="ui label"><%= tablet.author.username %></div>
                </div>
              </div>
            </div>

            <div class="item">
              <div class="image">
                <img src="<%= tablet.image %>" alt="<%= tablet.image %>">
            </div>
              <div class="content">
                <a class="header"><a href="/tablets/<%= tablet._id %>"><%= tablet.name %></a>
                <div class="meta">
                  <span class="cinema">Author: <a href="/users/<%= tablet.author.id %>"><%= tablet.author.username %></a></span>
                  <a class="avatar">
                    <% if(tablet.author.avatar.length < 1) { %>
                        <img src ="https://www.pngitem.com/pimgs/m/78-786501_black-avatar-png-user-icon-png-transparent-png.png" style="width: 5%">
                    <% } else { %>
                        <img src="<%= tablet.author.avatar %>" style="width: 2%;"> 
                    <% } %>
                  </a>
                </div>
                <div class="description">
                    <p><%= tablet.description.substring(0, 300) %>...</p>
                </div>
                <div class="extra">
                  <a class="ui right floated primary button" href="/tablets/<%= tablet._id %>">
                    Read More
                    <i class="right chevron icon"></i>
                  </a>
                </div>
              </div>
            </div>
            <% }) %>

          </div>
          <% } %>

    </div>
</div>
</div>
<%- include("../partials/footer") %>
