<%- include("partials/header") %>

  <!-- Header -->
  <section class="front-end-container show-desktop hide-mobile">
   
    <div class="container-image hide-tablet">  
      <div class="row">
          <div class="hide-desktop"></div>
          <div class="liquid-image show-desktop hide-tablet"></div>
        </div>
          <div class="header-container">
                <h1 class="header-primary">Sketch Like a Pro</h1>
                <p class="subheading">A Community for Digital Artists</p>
                <a href="/galleries" class="btn-check">View Our Gallery</a>
          </div>
        </div>
   
      </section>
      
      <main>

      <a href="/galleries" style="text-align: center"><h1>Latest Artwork</h1></a>
      <!-- this comes from the gallery page -->
      <% gallery.length = 4 %>
      <div style="display: flex; justify-content: space-around; flex-wrap: wrap; margin-top: 2rem;">

        <% gallery.forEach(function(gallery) { %>
        
            <div class="ui card" style="height: 30rem; width: 20rem; margin: 1rem;">
                <div class="image">
                    <img src="<%= gallery.image %>" style="height: 13rem; width: 100%;">
                </div>
                <div class="content">
                  <a class="header"><h4><%= gallery.name %></h4></a>
                  <div class="meta">
                    <span class="date">Created in <%= gallery.created.toDateString() %></span>
                  </div>
                  <p><%= gallery.description %></p>
                  <p><i class="user icon"></i><%= gallery.author.username %> </p>
        
                </div>
                <div class="extra content" style="display: flex; justify-content: center;">
                  <a>
                    <a class="ui primary button" href="/galleries/<%= gallery._id %>">View</a>
                  </a>
                </div>
              </div>
        
        <% }) %>
        
        
        </div>
      

        <div class="sign-up-container" id="sign-up-container">

            <div class="sign-up-wrapper">
              <h1 class="sign-up-header">Ready to share your work?</h1>
              <h2 class="sign-up-subheader">Join a great community of digital artist!</h2> 
              <a href="/register" class="ui primary button" style="padding: 1.2rem; width: 15rem; margin-top: 1rem;">SIGN UP</a>
            </div>
      
          </div>
        </main>


<%- include("partials/footer") %>

