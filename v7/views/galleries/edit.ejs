<%- include("../partials/header") %>

<div style="padding: 20rem 40rem">
<form class="ui form" action="/galleries/<%= gallery._id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
  <h2>Edit Post <%= gallery.name %></h2>
    <div class="field">
      <label>Name</label>
      <input type="text" value="<%= gallery.name %>" name="name">
    </div>
    <div class="field">
      <label for="image">Image Upload</label>
          <input type="file" id="image" name="image" accept="image/*" required>
      </div>
    <div class="field">
        <label>Description</label>
        <input type="text" value="<%= gallery.description %>" name="description">
      </div>
  
    <button class="ui primary button" type="submit">Update</button>
  </form>

</div>

  <%- include("../partials/footer") %>
