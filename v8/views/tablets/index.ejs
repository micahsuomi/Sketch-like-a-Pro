<%- include("../partials/header") %>

<h1>Tablets</h1>

<% if(currentUser) { %>
    <a class="ui purple button" href="/tablets/new"><i class="plus icon"></i>Add New</a>

<% } %>

<div class="tablets-container">
    <div class="tablets-wrapper">
        <% tablets.forEach(function(tablet) { %>
            <h2><%= tablet.name %></h2>
            <h2><%= tablet.author.firstName %> <%= tablet.author.lastName %></h2>
            <h2><%= tablet.author.username %></h2>
            <img src="<%= tablet.image %>" alt="<%= tablet.image %>">
            <p><%= tablet.description %></p>
            
        <% }) %>

        <div class="ui divided items" style="padding: 5rem 10rem;">
            <% tablets.forEach(function(tablet) { %>

            <div class="item">
              <div class="image">
                <img src="<%= tablet.image %>" alt="<%= tablet.image %>">
            </div>
              <div class="content">
                <a class="header"><%= tablet.name %></a>
                <div class="meta">
                  <span class="cinema">Reviewed by: <%= tablet.author.username %></span>
                </div>
                <div class="description">
                    <p><%= tablet.description.substring(0, 300) %>...</p>

                </div>
                <div class="extra">
                  <div class="ui label">IMAX</div>
                  <div class="ui label"><i class="globe icon"></i> Additional Languages</div>
                </div>
              </div>
            </div>
            <div class="item">
              <div class="image">
                <img src="<%= tablet.image %>" alt="<%= tablet.image %>">
            </div>
              <div class="content">
                <a class="header"><%= tablet.name %></a>
                <div class="meta">
                  <span class="cinema">Reviewed by: <%= tablet.author.username %></span>
                </div>
                <div class="description">
                    <p><%= tablet.description.substring(0, 300) %>...</p>
                </div>
                <div class="extra">
                  <div class="ui right floated primary button">
                    Read Review
                    <i class="right chevron icon"></i>
                  </div>
                  <div class="ui label"><%= tablet.author.username %></div>
                </div>
              </div>
            </div>
            <div class="item">
              <div class="image">
                <img src="<%= tablet.image %>" alt="<%= tablet.image %>">
            </div>
              <div class="content">
                <a class="header"><%= tablet.name %></a>
                <div class="meta">
                  <span class="cinema">Reviewed by: <%= tablet.author.username %></span>
                </div>
                <div class="description">
                    <p><%= tablet.description.substring(0, 300) %>...</p>
                </div>
                <div class="extra">
                  <div class="ui right floated primary button">
                    Read Review
                    <i class="right chevron icon"></i>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>

          </div>
    </div>
</div>

<%- include("../partials/footer") %>
