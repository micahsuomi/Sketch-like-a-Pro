<%- include("../partials/header") %>


<div class="form-container">
    <h2 style='color: white'>Add A New Comment to <%= gallery.name %></h2>
<form class="ui form comment-form" method="POST" action="/galleries/<%= gallery._id %>/comments">
  
    <div class="field">
      <label>Comment</label>
      <textarea name="comment[text]" placeholder="write a comment here"></textarea>
    </div>
    <div style="display: flex; justify-content: center; align-items: center;">
    <button class="ui primary button" type="submit" style="display: block">Submit</button>
  </div>
  </form>

</div>

